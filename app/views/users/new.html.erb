<div class='container'>

<div class="center jumbotron">
<h1 style='padding:10px'>Sign Up</h1>

<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>

<div style='width: 600px;'>  

  <div class='form-group'>
    <%= f.label :name ,'Name:' ,class: "col-sm-2 control-label"%>
     <div class='col-sm-8'>
       <%= f.text_field :name, autofocus: true %>
     </div>
  </div>

  <div class='form-group'>    
   <%= f.label :email ,'Email:', class: "col-sm-2 control-label"%>    
    <div class='col-sm-8'>
      <%= f.text_field :email %>
    </div>
  </div>

  <div class='form-group'>
   <%= f.label :password ,'Password: ', class: "col-sm-2 control-label"%>
    <div class='col-sm-8'>
      <%= f.password_field :password %>
    </div>
  </div>


  <div class='form-group'>
   <%= f.label :password_confirmation,'Confirmation:', class: "col-sm-2 control-label"%>
    <div class='col-sm-8'>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <br> 
  
    <div class='form-group'>
     <div class='col-sm-8'>
       <p> 
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       <%= f.submit "Sign up!" , class: "btn btn-lg btn-primary"%>      
        or           
       <%= link_to 'Login', login_path , class: "btn btn-lg btn-primary"%>      
       </p>
     </div>
    </div>

<% end %>


  </div> 
</div>
